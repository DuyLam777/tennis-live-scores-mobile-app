<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TennisApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:TennisApp.Views"
    xmlns:root="clr-namespace:TennisApp"
    Shell.FlyoutBehavior="Flyout">

    <!-- Flyout Menu Items -->
    <FlyoutItem Title="Home" Icon="home.png">
        <ShellContent ContentTemplate="{DataTemplate root:MainPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Bluetooth" Icon="bluetooth.png">
        <ShellContent ContentTemplate="{DataTemplate views:BluetoothConnectionPage}" />
    </FlyoutItem>

    <FlyoutItem Title="WebSocket" Icon="network.png">
        <ShellContent ContentTemplate="{DataTemplate views:WebSocketPage}" />
    </FlyoutItem>

    <!-- Existing pages -->
    <ShellContent
        Route="BluetoothConnectionPage"
        ContentTemplate="{DataTemplate views:BluetoothConnectionPage}"
        FlyoutItemIsVisible="False" />

    <ShellContent
        Route="WebSocketPage"
        ContentTemplate="{DataTemplate views:WebSocketPage}"
        FlyoutItemIsVisible="False" />

</Shell>