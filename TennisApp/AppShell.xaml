<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TennisApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:TennisApp.Views"
    xmlns:root="clr-namespace:TennisApp"
    Shell.FlyoutBehavior="Flyout"
    BackgroundColor="{StaticResource Background}"
    FlyoutBackground="{StaticResource Background}">

    <!-- Flyout Menu Items -->
    <FlyoutItem Title="Home" Icon="Resources/Images/home_button.svg">
        <ShellContent ContentTemplate="{DataTemplate root:MainPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Bluetooth" Icon="Resources/Images/bluetooth_icon.svg">
        <ShellContent ContentTemplate="{DataTemplate views:BluetoothConnectionPage}" />
    </FlyoutItem>

    <FlyoutItem Title="WebSocket" Icon="Resources/Images/websocket_icon.svg">
        <ShellContent ContentTemplate="{DataTemplate views:WebSocketPage}" />
    </FlyoutItem>

    <!-- Existing Pages -->
    <ShellContent
        Route="BluetoothConnectionPage"
        ContentTemplate="{DataTemplate views:BluetoothConnectionPage}"
        FlyoutItemIsVisible="False" />

    <ShellContent
        Route="WebSocketPage"
        ContentTemplate="{DataTemplate views:WebSocketPage}"
        FlyoutItemIsVisible="False" />
</Shell>