<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Core Colors -->
    <Color x:Key="Primary">#512BD4</Color>          <!-- Vibrant purple for accents -->
    <Color x:Key="Secondary">#DFD8F7</Color>        <!-- Soft purple for subtle highlights -->
    <Color x:Key="Tertiary">#2B0B98</Color>         <!-- Deep purple for contrast -->
    <Color x:Key="Success">#4CAF50</Color>          <!-- Green for success states -->
    <Color x:Key="Danger">#FF5252</Color>           <!-- Red for errors -->

    <!-- Background & Surface Colors -->
    <Color x:Key="Background">#121417</Color>      <!-- Dark charcoal background -->
    <Color x:Key="Surface">#FF272B2C</Color>         <!-- Slightly lighter surface for cards -->
    <Color x:Key="Overlay">#2C2E30</Color>         <!-- For overlays/modal backgrounds -->

    <!-- Neutral Colors -->
    <Color x:Key="White">#FFFFFF</Color>           <!-- Pure white for text/icons -->
    <Color x:Key="Gray50">#F8F9FA</Color>          <!-- Lightest gray -->
    <Color x:Key="Gray100">#E1E1E1</Color>         <!-- Light gray for borders -->
    <Color x:Key="Gray200">#C8C8C8</Color>         <!-- Medium-light gray -->
    <Color x:Key="Gray300">#ACACAC</Color>         <!-- Medium gray -->
    <Color x:Key="Gray400">#919191</Color>         <!-- Medium-dark gray -->
    <Color x:Key="Gray500">#6E6E6E</Color>         <!-- Dark gray -->
    <Color x:Key="Gray600">#404040</Color>         <!-- Very dark gray -->
    <Color x:Key="Gray900">#212121</Color>         <!-- Almost black -->
    <Color x:Key="Gray950">#141414</Color>         <!-- Darkest gray -->

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource Background}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource Surface}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
</ResourceDictionary>