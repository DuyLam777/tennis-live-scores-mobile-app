<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Base Page Style -->
    <Style TargetType="ContentPage">
        <Setter Property="BackgroundColor" Value="{StaticResource Background}" /> <!-- Dark background <button class="citation-flag" data-index="1"> -->
    </Style>

    <!-- Frame Style (Used for Cards) -->
    <Style TargetType="Frame">
        <Setter Property="BackgroundColor" Value="{StaticResource Surface}" /> <!-- Slightly lighter surface <button class="citation-flag" data-index="1"> -->
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="Margin" Value="0,8" />
        <Setter Property="HasShadow" Value="True" />
    </Style>

    <!-- Label Styles -->
    <Style x:Key="Headline" TargetType="Label">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource White}" /> <!-- White text for headlines <button class="citation-flag" data-index="1"> -->
    </Style>

    <Style x:Key="SubHeadline" TargetType="Label">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontAttributes" Value="None" />
        <Setter Property="TextColor" Value="{StaticResource Gray300}" /> <!-- Light gray text for subheadlines <button class="citation-flag" data-index="1"> -->
    </Style>

    <Style x:Key="BodyText" TargetType="Label">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="{StaticResource Gray500}" /> <!-- Medium gray text for body content <button class="citation-flag" data-index="1"> -->
    </Style>

    <!-- Button Styles -->
    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}" /> <!-- Vibrant purple <button class="citation-flag" data-index="1"> -->
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style x:Key="SecondaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Gray600}" /> <!-- Dark gray <button class="citation-flag" data-index="1"> -->
        <Setter Property="TextColor" Value="{StaticResource Gray300}" /> <!-- Light gray text <button class="citation-flag" data-index="1"> -->
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Padding" Value="16,12" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <!-- Entry Style -->
    <Style TargetType="Entry">
        <Setter Property="BackgroundColor" Value="{StaticResource Surface}" /> <!-- Matches card background <button class="citation-flag" data-index="1"> -->
        <Setter Property="TextColor" Value="{StaticResource White}" /> <!-- White text for input <button class="citation-flag" data-index="1"> -->
        <Setter Property="PlaceholderColor" Value="{StaticResource Gray500}" /> <!-- Placeholder in medium gray <button class="citation-flag" data-index="1"> -->
        <Setter Property="FontSize" Value="16" />
        <!-- <Setter Property="CornerRadius" Value="8" /> -->
        <!-- <Setter Property="Padding" Value="10,8" /> -->
    </Style>

    <!-- CollectionView Item Style -->
    <Style TargetType="CollectionView">
        <Setter Property="BackgroundColor" Value="{StaticResource Background}" /> <!-- Matches page background <button class="citation-flag" data-index="1"> -->
        <Setter Property="Margin" Value="0,16" />
    </Style>

    <!-- ScrollView Style -->
    <Style TargetType="ScrollView">
        <Setter Property="BackgroundColor" Value="{StaticResource Background}" /> <!-- Matches page background <button class="citation-flag" data-index="1"> -->
    </Style>

    <!-- Grid Style -->
    <Style TargetType="Grid">
        <Setter Property="BackgroundColor" Value="{StaticResource Background}" /> <!-- Matches page background <button class="citation-flag" data-index="1"> -->
    </Style>
</ResourceDictionary>