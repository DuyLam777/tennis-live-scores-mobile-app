<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TennisApp.Views.BluetoothMessagePage"
    Title="Bluetooth Messages"
    BackgroundColor="{StaticResource Background}">

    <!-- Grid with three rows:
         Row 0: WebSocket Connect Button
         Row 1: CollectionView for messages
         Row 2: Input area for sending messages -->
    <Grid RowDefinitions="Auto,*,Auto" Padding="20" RowSpacing="10">
        <!-- WebSocket Connection Button -->
        <Button
            x:Name="btnConnectWebSocket"
            Text="Connect WebSocket"
            Style="{StaticResource PrimaryButton}"
            Clicked="btnConnectWebSocket_Clicked"/>

        <!-- Message List -->
        <CollectionView
            Grid.Row="1"
            x:Name="messagesList"
            BackgroundColor="{StaticResource Background}"
            Margin="0,0,0,10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame
                        CornerRadius="20"
                        Margin="0,4"
                        Padding="12"
                        BackgroundColor="{StaticResource Surface}"
                        HorizontalOptions="{Binding IsSent, Converter={StaticResource BooleanToLayoutOptionsConverter}}">
                        <Label
                            Text="{Binding Text}"
                            TextColor="{Binding IsSent, Converter={StaticResource BooleanToColorConverter}}"
                            FontSize="16"
                            LineBreakMode="NoWrap"
                            MaxLines="1"
                            HorizontalOptions="Start"
                            VerticalOptions="Center"/>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Input Area -->
        <Grid
            Grid.Row="2"
            ColumnDefinitions="*,Auto"
            ColumnSpacing="10">
            <Entry
                x:Name="messageInput"
                Placeholder="Enter message"
                BackgroundColor="{StaticResource Surface}"
                TextColor="{StaticResource White}"
                PlaceholderColor="{StaticResource Gray500}"
                Margin="0,0,0,5"
                ClearButtonVisibility="WhileEditing"/>
            <Button
                Text="Send"
                Style="{StaticResource PrimaryButton}"
                Clicked="btnSendMessage_Clicked"
                Grid.Column="1"/>
        </Grid>
    </Grid>
</ContentPage>
