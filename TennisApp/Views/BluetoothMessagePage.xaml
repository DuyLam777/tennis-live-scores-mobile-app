<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TennisApp.Views.BluetoothMessagePage"
    Title="Bluetooth Messages"
    BackgroundColor="{StaticResource Background}">
    <ScrollView>
        <VerticalStackLayout Padding="20"
                             Spacing="20">
            <!-- Match Title -->
            <Label x:Name="MatchTitleLabel"
                   Style="{StaticResource SubHeadline}"
                   HorizontalOptions="Center"
                   FontAttributes="Bold"
                   TextColor="{StaticResource Primary}"/>

            <!-- Connect/Disconnect Button -->
            <Button
                x:Name="btnStart"
                Text="Connect"
                FontSize="24"
                Style="{StaticResource PrimaryButton}"
                Clicked="StartButton_Clicked"
                HeightRequest="60"/>

            <!-- Scoreboard Display -->
            <Label Text="Scoreboard"
                   Style="{StaticResource Headline}"
                   HorizontalOptions="Center"/>

            <!-- Sets Display -->
            <Label Text="Sets"
                   Style="{StaticResource SubHeadline}"
                   HorizontalOptions="Center"/>
            <Grid ColumnDefinitions="*,*"
                  ColumnSpacing="10">
                <Frame BackgroundColor="{StaticResource Surface}"
                       CornerRadius="12"
                       Padding="10"
                       Grid.Column="0">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Label Text="Player 1"
                               Style="{StaticResource SubHeadline}"
                               HorizontalOptions="Center"/>
                        <Label x:Name="Player1SetsLabel"
                               Text="0"
                               Style="{StaticResource Headline}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>
                <Frame BackgroundColor="{StaticResource Surface}"
                       CornerRadius="12"
                       Padding="10"
                       Grid.Column="1">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Label Text="Player 2"
                               Style="{StaticResource SubHeadline}"
                               HorizontalOptions="Center"/>
                        <Label x:Name="Player2SetsLabel"
                               Text="0"
                               Style="{StaticResource Headline}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <!-- Games Display -->
            <Label Text="Games"
                   Style="{StaticResource SubHeadline}"
                   HorizontalOptions="Center"/>
            <Grid ColumnDefinitions="*,*"
                  ColumnSpacing="10">
                <Frame BackgroundColor="{StaticResource Surface}"
                       CornerRadius="12"
                       Padding="10"
                       Grid.Column="0">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Label Text="Player 1"
                               Style="{StaticResource SubHeadline}"
                               HorizontalOptions="Center"/>
                        <Label x:Name="Player1GamesLabel"
                               Text="0"
                               Style="{StaticResource Headline}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>
                <Frame BackgroundColor="{StaticResource Surface}"
                       CornerRadius="12"
                       Padding="10"
                       Grid.Column="1">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Label Text="Player 2"
                               Style="{StaticResource SubHeadline}"
                               HorizontalOptions="Center"/>
                        <Label x:Name="Player2GamesLabel"
                               Text="0"
                               Style="{StaticResource Headline}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <!-- Messages Log -->
            <Label Text="Received Bluetooth Messages"
                   Style="{StaticResource SubHeadline}"
                   HorizontalOptions="Center"/>

            <CollectionView
                x:Name="messagesList"
                BackgroundColor="{StaticResource Background}"
                HeightRequest="200">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            CornerRadius="20"
                            Margin="0,4"
                            Padding="12"
                            BackgroundColor="{StaticResource Surface}"
                            HorizontalOptions="Fill"
                            BorderColor="Transparent">
                            <Frame.Triggers>
                                <DataTrigger TargetType="Frame"
                                             Binding="{Binding IsNew}"
                                             Value="True">
                                    <Setter Property="BorderColor"
                                            Value="{StaticResource Primary}"/>
                                </DataTrigger>
                            </Frame.Triggers>
                            <Label
                                Text="{Binding Text}"
                                TextColor="{StaticResource White}"
                                FontSize="16"
                                LineBreakMode="WordWrap"
                                HorizontalOptions="Start"
                                VerticalOptions="Center"/>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Back Button -->
            <Button
                Text="Back"
                Style="{StaticResource SecondaryButton}"
                Clicked="BackButton_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>