<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TennisApp.Views.BluetoothMessagePage"
             Title="Bluetooth Messages">
    <StackLayout>
        <!-- ListView to display messages -->
        <ListView x:Name="messagesList"
                HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Label Text="{Binding Text}"
                                TextColor="{Binding IsSent, Converter={StaticResource BooleanToColorConverter}}" />
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Input field and send button -->
        <Entry x:Name="messageInput"
                Placeholder="Enter message"/>
        <Button Text="Send"
                Clicked="btnSendMessage_Clicked"/>
    </StackLayout>
</ContentPage>