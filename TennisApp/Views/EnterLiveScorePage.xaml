<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="TennisApp.Views.EnterLiveScorePage"
       Title="Enter Live Score"
       BackgroundColor="{StaticResource Background}">
       <ScrollView>
              <VerticalStackLayout Padding="20"
                                   Spacing="20">
                     <!-- Title -->
                     <Label Text="Enter Live Score"
                            Style="{StaticResource Headline}"
                            HorizontalOptions="Center"/>

                     <!-- Match Title -->
                     <Label x:Name="MatchTitleLabel"
                            Style="{StaticResource SubHeadline}"
                            HorizontalOptions="Center"
                            FontAttributes="Bold"
                            TextColor="{StaticResource Primary}"/>

                     <!-- Connection Status -->
                     <Label x:Name="ConnectionStatusLabel"
                            Text="Connecting to server..."
                            HorizontalOptions="Center"
                            FontSize="14"/>

                     <!-- Sets Display -->
                     <Label Text="Sets"
                            Style="{StaticResource SubHeadline}"
                            HorizontalOptions="Center"/>
                     <Grid ColumnDefinitions="*,*"
                           ColumnSpacing="10">
                            <Border BackgroundColor="{StaticResource Surface}"
                                    StrokeShape="RoundRectangle 12"
                                    StrokeThickness="0"
                                    Padding="10"
                                    Grid.Column="0">
                                   <VerticalStackLayout HorizontalOptions="Center">
                                          <Label Text="Player 1"
                                                 Style="{StaticResource SubHeadline}"
                                                 HorizontalOptions="Center"/>
                                          <Label x:Name="Player1SetsLabel"
                                                 Text="0"
                                                 Style="{StaticResource Headline}"
                                                 HorizontalOptions="Center"/>
                                   </VerticalStackLayout>
                            </Border>
                            <Border BackgroundColor="{StaticResource Surface}"
                                    StrokeShape="RoundRectangle 12"
                                    StrokeThickness="0"
                                    Padding="10"
                                    Grid.Column="1">
                                   <VerticalStackLayout HorizontalOptions="Center">
                                          <Label Text="Player 2"
                                                 Style="{StaticResource SubHeadline}"
                                                 HorizontalOptions="Center"/>
                                          <Label x:Name="Player2SetsLabel"
                                                 Text="0"
                                                 Style="{StaticResource Headline}"
                                                 HorizontalOptions="Center"/>
                                   </VerticalStackLayout>
                            </Border>
                     </Grid>

                     <!-- Games Display -->
                     <Label Text="Games"
                            Style="{StaticResource SubHeadline}"
                            HorizontalOptions="Center"/>
                     <Grid ColumnDefinitions="*,*"
                           ColumnSpacing="10">
                            <!-- Replaced Frame with Border -->
                            <Border BackgroundColor="{StaticResource Surface}"
                                    StrokeShape="RoundRectangle 12"
                                    StrokeThickness="0"
                                    Padding="10"
                                    Grid.Column="0">
                                   <VerticalStackLayout HorizontalOptions="Center">
                                          <Label Text="Player 1"
                                                 Style="{StaticResource SubHeadline}"
                                                 HorizontalOptions="Center"/>
                                          <Label x:Name="Player1GamesLabel"
                                                 Text="0"
                                                 Style="{StaticResource Headline}"
                                                 HorizontalOptions="Center"/>
                                   </VerticalStackLayout>
                            </Border>
                            <!-- Replaced Frame with Border -->
                            <Border BackgroundColor="{StaticResource Surface}"
                                    StrokeShape="RoundRectangle 12"
                                    StrokeThickness="0"
                                    Padding="10"
                                    Grid.Column="1">
                                   <VerticalStackLayout HorizontalOptions="Center">
                                          <Label Text="Player 2"
                                                 Style="{StaticResource SubHeadline}"
                                                 HorizontalOptions="Center"/>
                                          <Label x:Name="Player2GamesLabel"
                                                 Text="0"
                                                 Style="{StaticResource Headline}"
                                                 HorizontalOptions="Center"/>
                                   </VerticalStackLayout>
                            </Border>
                     </Grid>

                     <!-- Action Buttons -->
                     <Grid ColumnDefinitions="*,*"
                           ColumnSpacing="10">
                            <Button Text="Add Set P1"
                                    TextColor="{StaticResource Overlay}"
                                    Style="{StaticResource PrimaryButton}"
                                    Clicked="AddSetP1_Clicked"
                                    Grid.Column="0"/>
                            <Button Text="Add Set P2"
                                    TextColor="{StaticResource Overlay}"
                                    Style="{StaticResource PrimaryButton}"
                                    Clicked="AddSetP2_Clicked"
                                    Grid.Column="1"/>
                     </Grid>
                     <Grid ColumnDefinitions="*,*"
                           ColumnSpacing="10">
                            <Button Text="Add Game P1"
                                    TextColor="{StaticResource Overlay}"
                                    Style="{StaticResource PrimaryButton}"
                                    Clicked="AddGameP1_Clicked"
                                    Grid.Column="0"/>
                            <Button Text="Add Game P2"
                                    TextColor="{StaticResource Overlay}"
                                    Style="{StaticResource PrimaryButton}"
                                    Clicked="AddGameP2_Clicked"
                                    Grid.Column="1"/>
                     </Grid>
                     <Grid ColumnDefinitions="*,*"
                           ColumnSpacing="10">
                            <Button Text="Clear Games"
                                    Style="{StaticResource SecondaryButton}"
                                    Clicked="ClearGames_Clicked"
                                    Grid.Column="0"/>
                            <Button Text="Clear Sets"
                                    Style="{StaticResource SecondaryButton}"
                                    Clicked="ClearSets_Clicked"
                                    Grid.Column="1"/>
                     </Grid>

                     <!-- Status Message -->
                     <Label x:Name="LastActionLabel"
                            Text=""
                            HorizontalOptions="Center"
                            FontSize="14"
                            Margin="0,10,0,10"/>

                     <!-- Back Button -->
                     <Button Text="Back"
                             Style="{StaticResource SecondaryButton}"
                             Clicked="BackButton_Clicked"/>
              </VerticalStackLayout>
       </ScrollView>
</ContentPage>