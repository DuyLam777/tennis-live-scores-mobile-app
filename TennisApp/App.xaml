<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TennisApp"
             xmlns:converters="clr-namespace:TennisApp.Converters"
             xmlns:viewmodels="clr-namespace:TennisApp.ViewModels"
             x:Class="TennisApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converters:BooleanToColorConverter x:Key="BooleanToColorConverter"/>
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
            <viewmodels:WebSocketViewModel x:Key="WebSocketViewModel"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>